{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "npm run build -w shared && npm run build -w apps/frontend",
  "outputDirectory": "apps/frontend/dist",
  "installCommand": "npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://meticulous-reprieve-production-92ad.up.railway.app/api/:path*"
    },
    {
      "source": "/health",
      "destination": "https://meticulous-reprieve-production-92ad.up.railway.app/health"
    }
  ]
}
